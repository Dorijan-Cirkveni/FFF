<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mobile.Views.RegistrationSuccess"
             Shell.NavBarIsVisible="False">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <ScrollView Grid.Row="1">
            <StackLayout VerticalOptions="CenterAndExpand" Padding="50,50,50,50" Spacing="10">
                <Image Source="guitar.png" WidthRequest="160"/>
                <Label Text="Još samo malo." HorizontalTextAlignment="Center" FontSize="Title" Padding="0,10,0,40" FontAttributes="Bold"/>
                <Label Text="Pričekaj da te profesor potvrdi pa ćeš se moći prijaviti. U međuvremenu, potvrdi svoju e-mail adresu." HorizontalTextAlignment="Center"></Label>
                <Button Text="Natrag" Command="{Binding BackCommand}"/>
            </StackLayout>
        </ScrollView>
    </Grid>
</ContentPage>