<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mobile.Views.NotStudentPage"
             Shell.NavBarIsVisible="False">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <ScrollView Grid.Row="1">
            <StackLayout VerticalOptions="CenterAndExpand" Padding="50,50,50,50" Spacing="10">
                <Label Text="Mobilna aplikacija namijenjena je isključivo učenicima." HorizontalTextAlignment="Center" FontSize="Title" Padding="0,0,0,10" FontAttributes="Bold"/>
                <Label Text="Nemate ovlasti za korištenje aplikacije." HorizontalTextAlignment="Center" Padding="0,0,0,10"></Label>
                <Button Text="Odjava" Command="{Binding BackCommand}"/>
            </StackLayout>
        </ScrollView>
    </Grid>
</ContentPage>